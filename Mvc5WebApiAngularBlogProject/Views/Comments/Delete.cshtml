@model Mvc5WebApiAngularBlogProject.Models.Comments

@{
    ViewBag.Title = "Delete";
}

<div class="container-fluid backdrop-gradient">
    <div class="row">
        <div class="col-lg-10 col-lg-offset-1">
            <h2>Delete</h2>

            <h3>Are you sure you want to delete this?</h3>
            <hr />
            <h4>Comment: @Html.DisplayFor(model => model.Body)</h4>
            <div style="padding-top:1em;">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn links-btn" />
                        @Html.ActionLink("Back to Post", "Details", "BlogPosts", new { Slug=ViewBag.Slug}, new { @class="links-btn btn"})
                    </div>
                }
            </div>
        </div>
    </div>
</div>
